<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/background2"
    android:gravity="center"
    android:theme="@style/TextBox"
    tools:context=".AltCadastro">

    <Spinner
        android:id="@+id/spinnerAluno2"
        android:layout_width="308dp"
        android:layout_height="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/branco"
        android:gravity="center"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/txEmail"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_below="@id/spinnerAluno2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoText="false"
        android:background="@drawable/table_borders"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <EditText
        android:id="@+id/txEndereco"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_below="@id/txEmail"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:background="@drawable/table_borders"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Endereço"
        android:inputType="textCapCharacters"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <EditText
        android:id="@+id/txBairro"
        android:layout_width="328dp"
        android:layout_height="50dp"
        android:layout_below="@id/txEndereco"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:background="@drawable/table_borders"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Bairro"
        android:inputType="textCapCharacters"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <EditText
        android:id="@+id/txCidade"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txEmail"
        android:layout_below="@id/txBairro"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autoText="false"
        android:background="@drawable/table_borders"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Cidade"
        android:inputType="textCapCharacters"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />


    <EditText
        android:id="@+id/txUF"
        android:layout_width="124dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/txEmail"
        android:layout_alignTop="@+id/txCidade"
        android:layout_below="@+id/txBairro"
        android:layout_centerHorizontal="true"
        android:autoText="false"
        android:background="@drawable/table_borders"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="UF"
        android:inputType="textCapCharacters"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <EditText
        android:id="@+id/txNumero"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txEmail"
        android:layout_below="@id/txCidade"
        android:layout_marginTop="5dp"
        android:background="@drawable/table_borders"
        android:ems="10"
        android:hint="Número"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <EditText
        android:id="@+id/txComplemento"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/txEmail"
        android:layout_alignTop="@+id/txNumero"
        android:background="@drawable/table_borders"
        android:ems="10"
        android:hint="Complemento"
        android:inputType="textCapCharacters"
        android:paddingLeft="10dp"
        android:textAlignment="textStart"
        android:textColor="@color/branco"
        android:textColorHint="@color/cinza" />

    <Button
        android:id="@+id/bt_Salvar"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignRight="@+id/txEmail"
        android:layout_alignTop="@+id/bt_Editar"
        android:layout_marginBottom="50dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Salvar"
        android:textColor="@color/branco" />

    <Button
        android:id="@+id/bt_Editar"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txEmail"
        android:layout_alignParentRight="false"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/txNumero"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_button"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="Editar"
        android:textColor="@color/branco" />

</RelativeLayout>