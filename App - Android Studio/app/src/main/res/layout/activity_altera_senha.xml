<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".AlteraSenha">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="62dp"
        android:text="Digite a senha atual:"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tx_senhaAtual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/branco"
        android:theme="@style/TextBox" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/tx_senhaAtual"
        android:layout_marginTop="30dp"
        android:text="Digite a nova senha:"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tx_senhaNova"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView2"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/branco"
        android:theme="@style/TextBox" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/tx_senhaNova"
        android:layout_marginTop="30dp"
        android:text="Confirme sua nova senha:"
        android:textColor="@color/branco"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/tx_confirmSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="textPassword"
        android:textColor="@color/branco"
        android:theme="@style/TextBox" />

    <Button
        android:id="@+id/bt_salvaSenha"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/tx_confirmSenha"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:background="@drawable/rounded_button"
        android:text="Salvar"
        android:textColor="@color/branco" />
</RelativeLayout>